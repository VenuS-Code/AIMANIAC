---
interface Props {
  variant?: 'primary' | 'secondary';
  href?: string;
  type?: 'button' | 'submit';
}

const { 
  variant = 'primary', 
  href, 
  type = 'button',
  ...rest
} = Astro.props;

const baseStyles = "px-4 py-2 rounded-md font-medium transition-colors";
const variants = {
  primary: "bg-[rgb(var(--primary))] text-white hover:opacity-90",
  secondary: "bg-white text-[rgb(var(--primary))] border border-[rgb(var(--primary))] hover:bg-gray-50"
};
---

{
  href ? (
    <a href={href} class:list={[baseStyles, variants[variant]]} {...rest}>
      <slot />
    </a>
  ) : (
    <button type={type} class:list={[baseStyles, variants[variant]]} {...rest}>
      <slot />
    </button>
  )
}